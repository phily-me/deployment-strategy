# Load configuration
if [[ -f ".env" ]]; then
    set -a
    source .env
    set +a
fi

# Check for Nix first (preferred)
if command -v nix >/dev/null 2>&1 && [[ -f "flake.nix" ]]; then
    echo "üöÄ Using Nix development environment"
    use flake
    return
fi

# Check for Docker as fallback
if command -v docker >/dev/null 2>&1; then
    echo "‚ö†Ô∏è  Nix not available - Docker detected"
    echo "   To use Docker development environment:"
    echo "   1. Run: ./scripts/docker-setup.sh setup"
    echo "   2. Then: docker exec -it $DEV_CONTAINER_NAME nix develop"
    return
fi

# No suitable tools found
echo "‚ùå Neither Nix nor Docker available!"
echo "   Please install one of:"
echo "   ‚Ä¢ Nix: https://nixos.org/download.html"
echo "   ‚Ä¢ Docker: https://docs.docker.com/get-docker/"